{
  "name": "nodejs-typescript-server",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon",
    "build": "NODE_OPTIONS=\"--max-old-space-size=4096\" tsc",
    "build:prod": "npm run clean && tsc",
    "clean": "rimraf dist",
    "start": "node --max-old-space-size=4096 dist/server.js",
